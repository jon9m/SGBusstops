<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusServiceActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="0dp" >

        <TextView
            android:id="@+id/service_info"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_weight="1.51"
            android:ems="10"
            android:paddingLeft="5dip"            
            android:text="@string/service_details" />

        <Button
            android:id="@+id/gotoroute_map"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="0dip"
            android:background="@drawable/btn_anim"
            android:onClick="showBusRouteMap" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF4B1F" />

    <WebView
        android:id="@+id/servicewebdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp" />

</LinearLayout>