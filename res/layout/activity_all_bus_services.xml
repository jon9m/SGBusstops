<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".AllBusServicesActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/all_servicename"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1.51"
            android:ems="10"
            android:hint="@string/all_service_search_hint" />

        <Button
            android:id="@+id/all_service_clear_txt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/clear_text"
            android:onClick="clearAllserviceText" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF4B1F" />

    <ListView
        android:id="@+id/all_services_view"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

</TableLayout>